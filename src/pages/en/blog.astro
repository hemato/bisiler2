---
// === COMPONENT IMPORTS ===
import Layout from '../../layouts/Layout.astro';
import { Calendar, User, ArrowRight, BookOpen, Search, Tag, Folder } from 'lucide-react';

// === I18N IMPORTS ===
import { getLangFromUrl, getTranslations } from '../../i18n/utils';

// === CONFIG IMPORTS ===
import { COMPANY_INFO } from '../../config/company';
import { DOMAIN_CONFIG, getUrl } from '../../config/domain';
import { getRoute } from '../../utils/routes';

// === REMOVED STRAPI IMPORTS - USING STATIC DATA ===
// import { blogAPI, categoriesAPI, tagsAPI, handleStrapiError } from '../../utils/strapi';
// import { getMediaUrl, formatDate, calculateReadingTime } from '../../config/strapi';

// === SEO OPTIMIZATION IMPORTS ===
import { AdvancedSEOManager } from '../../utils/seo-advanced';
import {
  generateBreadcrumbSchema,
  generateOrganizationSchema
} from '../../utils/structured-data';
import { generateOptimizedMetaDescription } from '../../utils/seo';

// === PERFORMANCE OPTIMIZATION IMPORTS ===
import { initPerformanceOptimizations, resourceLoader } from '../../utils/performance';

// === SECURITY IMPORTS ===
import { securityHeaders, xssProtection, cspUtils } from '../../utils/security';

// === ENGLISH-SPECIFIC CONSTANTS ===
const BLOG_PAGE_CONFIG_EN = {
  PERFORMANCE: {
    METRICS_DELAY: 5000,
    LAZY_LOAD_MARGIN: '50px 0px',
    INTERSECTION_THRESHOLD: 0.15,
    ANIMATION_DELAY: 200,
    POSTS_PER_PAGE: 6,
    IMAGE_LAZY_LOADING: true,
    SCROLL_DEBOUNCE: 100
  },
  SEO: {
    META_DESCRIPTION: {
      MAX_LENGTH: 160
    },
    BLOG_SCHEMA: {
      ARTICLE_SECTION: 'Technology',
      PUBLISHER_TYPE: 'Organization',
      LANGUAGE: 'en-US'
    },
    KEYWORDS: ['CRM', 'automation', 'digital transformation', 'business solutions']
  },
  CONTENT: {
    EXCERPT_LENGTH: 150,
    MAX_TAGS_DISPLAY: 3,
    RECENT_POSTS_COUNT: 3,
    READING_TIME_MULTIPLIER: 1.2 // English reading might be slower for Turkish audience
  },
  PAGINATION: {
    MAX_PAGES_SHOWN: 5,
    POSTS_PER_PAGE: 4,
    INFINITE_SCROLL: false
  },
  ANALYTICS: {
    TRACK_SCROLL_DEPTH: true,
    TRACK_TIME_ON_PAGE: true,
    TRACK_ENGAGEMENT: true
  }
};

// === INITIALIZATION ===
const lang = getLangFromUrl(Astro.url);
const t = await getTranslations(lang);

// === SECURITY CONFIGURATION ===
const securityNonce = cspUtils.generateNonce();

// === SEO CONFIGURATION ===
const seoManager = new AdvancedSEOManager();

// === URL PARAMETERS ===
const url = new URL(Astro.request.url);
const currentPage = Math.max(1, parseInt(url.searchParams.get('page') || '1'));
const categoryFilter = url.searchParams.get('category') || undefined;
const tagFilter = url.searchParams.get('tag') || undefined;
const searchQuery = url.searchParams.get('search') || undefined;

console.log('EN Blog - Server-side params:', { currentPage, categoryFilter, tagFilter, searchQuery });

// === TYPE DEFINITIONS ===
let blogPosts: any[] = [];
let categories: any[] = [];
let tags: any[] = [];
let error: string | null = null;

// === ENGLISH-SPECIFIC HELPER FUNCTIONS ===
function getBlogBreadcrumbsEN(lang: 'tr' | 'en') {
  return [
    { name: lang === 'en' ? 'Home' : 'Anasayfa', url: getRoute(lang, 'home') },
    { name: t.nav.blog, url: getRoute(lang, 'blog') }
  ];
}

function getBlogPageTitleEN(lang: 'tr' | 'en'): string {
  return `${t.blog.title} | ${COMPANY_INFO.name}`;
}

function getBlogMetaDescriptionEN(lang: 'tr' | 'en'): string {
  return generateOptimizedMetaDescription(
    lang === 'en'
      ? 'Stay updated with the latest in CRM, automation, and digital transformation. Expert insights and best practices from BisilerTech.'
      : 'CRM, otomasyon ve dijital dönüşümde en güncel gelişmeleri takip edin. BisilerTech\'ten uzman görüşleri ve en iyi uygulamalar.',
    BLOG_PAGE_CONFIG_EN.SEO.KEYWORDS,
    lang === 'en' ? 'Turkey' : 'Türkiye',
    lang
  );
}

// === STATIC DATA INITIALIZATION ===
// Using static blog data instead of Strapi CMS for English blog
console.log('EN Blog - Using static blog data - Strapi disabled');
blogPosts = [];
categories = [];
tags = [];
error = null;

// Fallback blog posts for English - updated with English content
const fallbackPostsEN = [
  {
    id: 1,
    title: 'CRM Selection Guide for SMEs',
    excerpt: 'Learn how to choose the right CRM system for your small or medium business. Key features, pricing models and implementation tips.',
    publishedAt: '2025-07-11',
    author: `${COMPANY_INFO.name} Team`,
    category: 'CRM',
    slug: 'crm-selection-guide-smes',
    image: 'https://images.pexels.com/photos/3184465/pexels-photo-3184465.jpeg?auto=compress&cs=tinysrgb&w=800',
    tags: ['CRM', 'SME', 'Digital Transformation'],
    readTime: '5 min'
  },
  {
    id: 2,
    title: 'Sales Process Automation with Zapier',
    excerpt: 'Discover how to automate your sales processes using Zapier. From lead capture to customer follow-up, streamline everything.',
    publishedAt: '2025-07-04',
    author: `${COMPANY_INFO.name} Team`,
    category: 'Automation',
    slug: 'zapier-sales-automation',
    image: 'https://images.pexels.com/photos/3184339/pexels-photo-3184339.jpeg?auto=compress&cs=tinysrgb&w=800',
    tags: ['Zapier', 'Automation', 'Sales'],
    readTime: '7 min'
  },
  {
    id: 3,
    title: 'SEO Fundamentals for Corporate Websites',
    excerpt: 'Essential SEO strategies for corporate websites. Technical optimization, content strategy and performance measurement.',
    publishedAt: '2025-06-27',
    author: `${COMPANY_INFO.name} Team`,
    category: 'SEO',
    slug: 'seo-fundamentals-corporate-websites',
    image: 'https://images.pexels.com/photos/270348/pexels-photo-270348.jpeg?auto=compress&cs=tinysrgb&w=800',
    tags: ['SEO', 'Website', 'Digital Marketing'],
    readTime: '6 min'
  },
  {
    id: 4,
    title: 'Digital Transformation Success Stories',
    excerpt: 'Real success stories from our clients\' digital transformation journeys. Challenges, solutions and results.',
    publishedAt: '2025-06-20',
    author: `${COMPANY_INFO.name} Team`,
    category: 'Case Study',
    slug: 'digital-transformation-success-stories',
    image: 'https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg?auto=compress&cs=tinysrgb&w=800',
    tags: ['Digital Transformation', 'Success Stories', 'CRM'],
    readTime: '8 min'
  },
  {
    id: 5,
    title: 'Form Integration Best Practices',
    excerpt: 'Learn how to integrate web forms with CRM systems effectively. Data validation, automation and user experience tips.',
    publishedAt: '2025-06-13',
    author: `${COMPANY_INFO.name} Team`,
    category: 'Integration',
    slug: 'form-integration-best-practices',
    image: 'https://images.pexels.com/photos/3184360/pexels-photo-3184360.jpeg?auto=compress&cs=tinysrgb&w=800',
    tags: ['Forms', 'Integration', 'CRM'],
