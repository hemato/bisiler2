---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl } from '../../i18n/utils';
import {
  generateCRMServiceSchema,
  generateFAQSchema,
  generateAggregateReviewSchema,
  generateLandingPageSchema
} from '../../utils/structured-data';
import CRMConsultingForm from '../../components/CRMConsultingForm';
import { ArrowRight, CheckCircle, TrendingUp, MessageCircle, Phone, Users, Target, BarChart3, Shield, Smartphone, Link, Clock, Star, Award, Zap } from 'lucide-react';
import { CONTACT_ACTIONS } from '../../config/contact';
import { DOMAIN_CONFIG } from '../../config/domain';

const lang = getLangFromUrl(Astro.url);
const translations = await import('../../i18n/en.json');
const t = translations.default;

// Enhanced FAQ structured data
const faqData = [
  {
    question: "Which CRM platform should I choose?",
    answer: "We recommend Zoho CRM or Bitrix24 according to your business needs. We determine the most suitable one for you with free analysis."
  },
  {
    question: "How long does the setup take?",
    answer: "It takes between 2-8 weeks depending on system complexity. Simple CRM setups take 2-3 weeks, comprehensive integrations can take 6-8 weeks."
  },
  {
    question: "Will my existing data be lost?",
    answer: "No, we safely transfer all your data to the new system. During the data migration process, we take backups and test everything thoroughly."
  }
];

// Enhanced reviews data
const reviewsData = [
  {
    author: "MediCare Private Hospital",
    rating: 5,
    reviewBody: "Our patient tracking has been completely fixed. Thanks to Zoho CRM, no appointments get mixed up. 50% appointment efficiency increase.",
    datePublished: "2024-01-15"
  },
  {
    author: "RetailMax Store Chain",
    rating: 5,
    reviewBody: "Inter-branch coordination is perfect. Now all our customer data is centralized. 45% online sales increase achieved.",
    datePublished: "2024-02-20"
  }
];

// Generate enhanced schemas
const crmServiceSchema = generateCRMServiceSchema('en');
const faqSchema = generateFAQSchema(faqData);
const reviewSchema = generateAggregateReviewSchema("CRM Consulting Services", "5.0", "100", "en");
const landingPageSchema = generateLandingPageSchema(
  "Advanced CRM Consulting Landing Page V2",
  "Professional CRM consulting services with modern approach to increase sales by 40% and stop customer loss",
  "CRM Consulting",
  "en"
);

// Hreflang for SEO
const hreflang = [
  { lang: 'tr', url: `${DOMAIN_CONFIG.baseUrl}/crm-danismanligi-v2` },
  { lang: 'en', url: `${DOMAIN_CONFIG.baseUrl}/en/crm-consulting-v2` }
];
---

<Layout
  title={t.crmConsulting.title}
  description={t.crmConsulting.description}
  canonical={`${DOMAIN_CONFIG.baseUrl}/en/crm-consulting-v2`}
  hreflang={hreflang}
  hideFooter={true}
  isLandingPage={true}
>

<!-- Enhanced Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(crmServiceSchema)}></script>
<script type="application/ld+json" set:html={JSON.stringify(faqSchema)}></script>
<script type="application/ld+json" set:html={JSON.stringify(reviewSchema)}></script>
<script type="application/ld+json" set:html={JSON.stringify(landingPageSchema)}></script>

<!-- Critical CSS for V2 advanced features -->
<style is:inline>
  .floating-activity {
    animation: floatActivity 3s ease-in-out infinite;
    animation-delay: 0.5s;
  }
  @keyframes floatActivity {
    0%, 100% { transform: translateY(0px) scale(1); }
    50% { transform: translateY(-8px) scale(1.02); }
  }
  .pulse-advanced {
    animation: pulseAdvanced 2s infinite;
  }
  @keyframes pulseAdvanced {
    0%, 100% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(59, 130, 246, 0); }
  }
</style>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-red-50 to-primary-50 overflow-hidden">
    <div class="absolute inset-0 bg-grid-secondary-100 opacity-25"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-red-200 rounded-full opacity-20 animate-float"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-primary-200 rounded-full opacity-20 animate-float" style="animation-delay: 1s;"></div>
    
    <!-- Trust Badges -->
    <div class="absolute top-4 left-4 flex items-center gap-2 z-10">
      <div class="bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-medium text-green-700 border border-green-200">
        <Award className="w-3 h-3 inline mr-1" />
        Zoho Certified
      </div>
      <div class="bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-medium text-blue-700 border border-blue-200">
        <Star className="w-3 h-3 inline mr-1" />
        100+ Projects
      </div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="animate-fade-in">
          <div class="bg-red-100 text-red-800 px-4 py-2 rounded-full text-sm font-medium mb-6 inline-flex items-center">
            <Clock className="w-4 h-4 mr-2" />
            {t.crmConsulting.hero.urgency}
          </div>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-secondary-900 mb-6 leading-tight">
            {t.crmConsulting.hero.title}
          </h1>
          <p class="text-xl text-secondary-600 mb-8 leading-relaxed">
            {t.crmConsulting.hero.subtitle}
          </p>
          
          <!-- Key Benefits -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
            <div class="flex items-center text-green-700 bg-green-50 p-3 rounded-lg">
              <CheckCircle className="w-5 h-5 mr-2" />
              <span class="font-medium">Free Analysis</span>
            </div>
            <div class="flex items-center text-blue-700 bg-blue-50 p-3 rounded-lg">
              <Zap className="w-5 h-5 mr-2" />
              <span class="font-medium">Quick Setup</span>
            </div>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="#form"
              class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl"
            >
              {t.crmConsulting.hero.primaryCta}
              <ArrowRight className="ml-2 w-5 h-5" />
            </a>
            <a
              href="#testimonials"
              class="inline-flex items-center px-8 py-4 border-2 border-primary-600 text-primary-600 font-semibold rounded-lg hover:bg-primary-600 hover:text-white transition-all duration-200"
            >
              {t.crmConsulting.hero.secondaryCta}
            </a>
          </div>
        </div>

        <div class="relative animate-slide-up">
          <div class="relative z-10">
            <img
              src="https://images.pexels.com/photos/7688336/pexels-photo-7688336.jpeg?auto=compress&cs=tinysrgb&w=800"
              alt="CRM dashboard analysis showing customer tracking system and sales performance metrics"
              class="rounded-2xl shadow-2xl w-full"
              loading="eager"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-primary-600/20 to-transparent rounded-2xl"></div>
            
            <!-- Floating Success Metric -->
            <div class="absolute -bottom-6 -left-6 bg-white rounded-xl shadow-xl p-4 animate-bounce">
              <div class="flex items-center gap-2">
                <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                  <TrendingUp className="w-4 h-4 text-white" />
                </div>
                <div>
                  <div class="text-sm font-medium text-gray-600">Sales Increase</div>
                  <div class="text-xl font-bold text-green-600">+40%</div>
                </div>
              </div>
            </div>
          </div>
          <div class="absolute -top-6 -right-6 w-24 h-24 bg-green-500 rounded-full opacity-20 animate-float"></div>
          <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-blue-500 rounded-full opacity-20 animate-float" style="animation-delay: 0.5s;"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Proof Bar -->
  <section class="bg-white border-b border-gray-200 py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <p class="text-sm text-gray-600 mb-4">Trusted by leading companies</p>
        <div class="flex justify-center items-center gap-8 opacity-60">
          <div class="text-2xl font-bold text-gray-400">TechFlow</div>
          <div class="text-2xl font-bold text-gray-400">MediCare</div>
          <div class="text-2xl font-bold text-gray-400">RetailMax</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Problems Section -->
  <section class="py-16 bg-secondary-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary-900 mb-4">
          {t.crmConsulting.problems.title}
        </h2>
        <p class="text-xl text-red-600 font-medium">You're not alone in facing these challenges</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {t.crmConsulting.problems.items.map((problem, index) => (
          <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow border-l-4 border-red-500">
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
              <span class="text-red-600 text-2xl">‚ùå</span>
            </div>
            <p class="text-secondary-700 font-medium">{problem}</p>
          </div>
        ))}
      </div>
      
      <!-- Pain Point Amplifier -->
      <div class="mt-12 text-center">
        <div class="bg-red-50 border border-red-200 rounded-xl p-6 max-w-2xl mx-auto">
          <h3 class="text-xl font-bold text-red-800 mb-2">The Real Cost of Inaction</h3>
          <p class="text-red-700">Every day without proper CRM, you're losing potential customers and revenue. Don't let your competitors get ahead.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Solution Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary-900 mb-4">
          {t.crmConsulting.solution.title}
        </h2>
        <p class="text-xl text-secondary-600 max-w-3xl mx-auto">
          {t.crmConsulting.solution.description}
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-8 rounded-2xl relative overflow-hidden">
          <div class="absolute top-0 right-0 w-20 h-20 bg-blue-200 rounded-full opacity-50 -mr-10 -mt-10"></div>
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <BarChart3 className="w-8 h-8 text-white" />
            </div>
            <h3 class="text-2xl font-bold text-secondary-900 mb-2">
              {t.crmConsulting.solution.platforms.zoho.title}
            </h3>
            <p class="text-sm text-blue-700 bg-blue-200 px-3 py-1 rounded-full inline-block">Enterprise Solution</p>
          </div>
          <ul class="space-y-3">
            {t.crmConsulting.solution.platforms.zoho.features.map((feature, index) => (
              <li class="flex items-start">
                <CheckCircle className="w-5 h-5 text-green-600 mr-3 mt-0.5 flex-shrink-0" />
                <span class="text-secondary-700">{feature}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-8 rounded-2xl relative overflow-hidden">
          <div class="absolute top-0 right-0 w-20 h-20 bg-purple-200 rounded-full opacity-50 -mr-10 -mt-10"></div>
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <Users className="w-8 h-8 text-white" />
            </div>
            <h3 class="text-2xl font-bold text-secondary-900 mb-2">
              {t.crmConsulting.solution.platforms.bitrix.title}
            </h3>
            <p class="text-sm text-purple-700 bg-purple-200 px-3 py-1 rounded-full inline-block">Team Collaboration</p>
          </div>
          <ul class="space-y-3">
            {t.crmConsulting.solution.platforms.bitrix.features.map((feature, index) => (
              <li class="flex items-start">
                <CheckCircle className="w-5 h-5 text-green-600 mr-3 mt-0.5 flex-shrink-0" />
                <span class="text-secondary-700">{feature}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
      
      <!-- Decision Helper -->
      <div class="mt-12 text-center">
        <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-xl p-6 max-w-2xl mx-auto">
          <h3 class="text-xl font-bold text-secondary-900 mb-2">Not Sure Which CRM is Right for You?</h3>
          <p class="text-secondary-600 mb-4">Our free analysis will determine the best solution for your business</p>
          <a href="#form" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
            Get Free Analysis
            <ArrowRight className="ml-2 w-4 h-4" />
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-secondary-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary-900 mb-4">
          {t.crmConsulting.features.title}
        </h2>
        <p class="text-xl text-secondary-600">Transform your business with these powerful features</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {t.crmConsulting.features.items.map((feature, index) => (
          <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2 group">
            <div class="text-4xl mb-4 group-hover:scale-110 transition-transform">{feature.title.split(' ')[0]}</div>
            <h3 class="text-xl font-bold text-secondary-900 mb-2">
              {feature.title.substring(2)}
            </h3>
            <p class="text-secondary-600 mb-4">{feature.description}</p>
            <div class="bg-green-50 p-3 rounded-lg border-l-4 border-green-500">
              <p class="text-green-800 text-sm font-medium">
                üí° {feature.benefit}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ROI Calculator Section -->
  <section class="py-16 bg-gradient-to-br from-green-50 to-blue-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary-900 mb-4">
          {t.crmConsulting.roi.title}
        </h2>
        <p class="text-xl text-secondary-600 max-w-3xl mx-auto">
          {t.crmConsulting.roi.subtitle}
        </p>
      </div>
      
      <div class="bg-white rounded-2xl shadow-xl p-8 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-green-200 rounded-full opacity-20 -mr-16 -mt-16"></div>
        <h3 class="text-2xl font-bold text-secondary-900 mb-6 text-center">
          {t.crmConsulting.roi.results.title}
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          {t.crmConsulting.roi.results.items.map((result, index) => (
            <div class="text-center p-6 bg-gradient-to-br from-green-50 to-green-100 rounded-xl border border-green-200">
              <div class="text-3xl mb-2">{result.split(' ')[0]}</div>
              <p class="text-secondary-700 font-medium">{result.substring(2)}</p>
            </div>
          ))}
        </div>
        
        <!-- ROI Calculator CTA -->
        <div class="text-center">
          <div class="bg-gradient-to-r from-green-600 to-blue-600 text-white p-6 rounded-xl">
            <h4 class="text-xl font-bold mb-2">Want to Calculate Your Specific ROI?</h4>
            <p class="mb-4">Get a personalized analysis of your potential savings and revenue increase</p>
            <a href="#form" class="inline-flex items-center px-6 py-3 bg-white text-green-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors">
              Calculate My ROI
              <ArrowRight className="ml-2 w-4 h-4" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary-900 mb-4">
          {t.crmConsulting.process.title}
        </h2>
        <p class="text-xl text-secondary-600">Our proven 6-step process for CRM success</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {t.crmConsulting.process.steps.map((step, index) => (
          <div class="relative">
            <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow border-t-4 border-primary-600 relative">
              <div class="flex items-center mb-4">
                <div class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold mr-3">
                  {index + 1}
                </div>
                <div class="text-2xl">{step.title.split(' ')[0]}</div>
              </div>
              <h3 class="text-lg font-bold text-secondary-900 mb-2">
                {step.title.substring(2)}
              </h3>
              <p class="text-secondary-600">{step.description}</p>
            </div>
            {index < t.crmConsulting.process.steps.length - 1 && (
              <div class="hidden lg:block absolute top-1/2 -right-4 w-8 h-0.5 bg-primary-300 transform -translate-y-1/2"></div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Packages Section -->
  <section class="py-16 bg-secondary-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary-900 mb-4">
          {t.crmConsulting.packages.title}
        </h2>
        <p class="text-xl text-secondary-600 max-w-3xl mx-auto">
          {t.crmConsulting.packages.subtitle}
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {t.crmConsulting.packages.items.map((packageItem, index) => (
          <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2 group">
            <div class="text-center mb-6">
              <div class="text-3xl mb-2 group-hover:scale-110 transition-transform">{packageItem.title.split(' ')[0]}</div>
              <h3 class="text-xl font-bold text-secondary-900">
                {packageItem.title.substring(2)}
              </h3>
            </div>
            <ul class="space-y-3 mb-6">
              {packageItem.features.map((feature, featureIndex) => (
                <li class="flex items-start">
                  <CheckCircle className="w-4 h-4 text-green-600 mr-3 mt-0.5 flex-shrink-0" />
                  <span class="text-secondary-700 text-sm">{feature}</span>
                </li>
              ))}
            </ul>
            <a href="#form" class="w-full inline-flex items-center justify-center px-4 py-2 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
              Get Quote
              <ArrowRight className="ml-2 w-4 h-4" />
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials" class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary-900 mb-4">
          {t.crmConsulting.testimonials.title}
        </h2>
        <p class="text-xl text-secondary-600">Real results from real businesses</p>
      </div>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {t.crmConsulting.testimonials.items.map((testimonial, index) => (
          <div class="bg-gradient-to-br from-blue-50 to-purple-50 p-8 rounded-2xl shadow-lg hover:shadow-xl transition-shadow relative">
            <div class="absolute top-4 right-4 text-4xl text-blue-200">"</div>
            <div class="mb-6">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center text-white font-bold mr-4">
                  {testimonial.company.charAt(0)}
                </div>
                <div>
                  <h4 class="font-bold text-secondary-900">{testimonial.company}</h4>
                  <p class="text-secondary-600 text-sm">{testimonial.person}</p>
                </div>
              </div>
              <blockquote class="text-secondary-700 italic mb-4 text-lg">
                "{testimonial.quote}"
              </blockquote>
            </div>
            <div class="space-y-2">
              <h5 class="font-semibold text-secondary-900 mb-2">Results Achieved:</h5>
              {testimonial.results.map((result, resultIndex) => (
                <div class="flex items-center text-sm">
                  <TrendingUp className="w-4 h-4 text-green-600 mr-2" />
                  <span class="text-secondary-700">{result}</span>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Urgency CTA Section -->
  <section class="py-16 bg-gradient-to-br from-primary-600 to-secondary-800 relative overflow-hidden">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-white/10 rounded-full -mr-48 -mt-48"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-white mb-4">
          {t.crmConsulting.cta.title}
        </h2>
        <p class="text-xl text-primary-100 mb-8">
          {t.crmConsulting.cta.subtitle}
        </p>
        <div class="bg-red-500 text-white px-6 py-3 rounded-full text-lg font-semibold mb-8 inline-flex items-center">
          <Clock className="w-5 h-5 mr-2" />
          {t.crmConsulting.cta.urgency}
        </div>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#form"
            class="inline-flex items-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-primary-50 transition-all duration-200 transform hover:scale-105"
          >
            {t.crmConsulting.cta.primaryCta}
            <ArrowRight className="ml-2 w-5 h-5" />
          </a>
          <a
            href={CONTACT_ACTIONS.whatsapp.url}
            target="_blank"
            rel="noopener noreferrer"
