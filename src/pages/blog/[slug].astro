function generateArticleSchema(post: any, lang: 'tr' | 'en') {
  const wordCount = Math.floor(post.content.replace(/<[^>]*>/g, '').split(' ').length);
  const readingTime = Math.ceil(wordCount / BLOG_POST_CONFIG.CONTENT.READING_SPEED_WPM);
  
  return {
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": post.title,
    "description": post.excerpt,
    "image": post.image,
    "datePublished": post.date,
    "dateModified": post.date,
    "author": {
      "@type": "Organization",
      "name": post.author
    },
    "publisher": {
