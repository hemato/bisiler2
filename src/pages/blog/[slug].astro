  <script is:inline define:vars={{
    PERFORMANCE_CONFIG: BLOG_POST_CONFIG.PERFORMANCE,
    securityNonce,
    lang,
    postTitle: post.title,
    postCategory: post.category
  }}>
    // Performance Metrics Tracking for Blog Post
    function initBlogPostPerformanceTracking() {
      // Core Web Vitals monitoring
      let fcpObserver, lcpObserver, clsObserver;
      
      // First Contentful Paint (FCP)
      fcpObserver = new PerformanceObserver((entryList) => {
        const fcpEntries = entryList.getEntriesByName('first-contentful-paint');
        if (fcpEntries.length > 0) {
          const fcp = fcpEntries[0].startTime;
          console.log('Blog Post FCP:', fcp);
          if (typeof gtag !== 'undefined') {
            gtag('event', 'blog_post_fcp', {
              value: Math.round(fcp),
              event_category: 'performance',
              post_title: postTitle,
              post_category: postCategory
            });
          }
        }
      });
      fcpObserver.observe({ entryTypes: ['paint'] });

      // Largest Contentful Paint (LCP)
      lcpObserver = new PerformanceObserver((entryList) => {
        const lcpEntries = entryList.getEntries();
        if (lcpEntries.length > 0) {
          const lcp = lcpEntries[lcpEntries.length - 1].startTime;
          console.log('Blog Post LCP:', lcp);
          if (typeof gtag !== 'undefined') {
            gtag('event', 'blog_post_lcp', {
              value: Math.round(lcp),
              event_category: 'performance',
              post_title: postTitle
            });
          }
        }
      });
      lcpObserver.observe({ entryTypes: ['largest-contentful-paint'] });

      // Cumulative Layout Shift (CLS)
      let clsValue = 0;
      clsObserver = new PerformanceObserver((entryList) => {
        for (const entry of entryList.getEntries()) {
          if (!entry.hadRecentInput) {
            clsValue += entry.value;
          }
        }
        console.log('Blog Post CLS:', clsValue);
        if (typeof gtag !== 'undefined') {
          gtag('event', 'blog_post_cls', {
            value: Math.round(clsValue * 1000),
            event_category: 'performance',
            post_title: postTitle
          });
        }
      });
      clsObserver.observe({ entryTypes: ['layout-shift'] });

      // Reading Progress Tracking
      let maxScrollPercent = 0;
      function trackReadingProgress() {
        const article = document.querySelector('article');
        if (!article) return;
        
        const scrollTop = window.pageYOffset;
        const articleTop = article.offsetTop;
        const articleHeight = article.offsetHeight;
        const windowHeight = window.innerHeight;
        
        const scrollPercent = Math.round(
          ((scrollTop - articleTop + windowHeight) / articleHeight) * 100
        );
        
        if (scrollPercent > maxScrollPercent && scrollPercent <= 100) {
          maxScrollPercent = scrollPercent;
          
          // Track reading milestones
          if ([25, 50, 75, 100].includes(scrollPercent)) {
            if (typeof gtag !== 'undefined') {
              gtag('event', 'reading_progress', {
                event_category: 'engagement',
                event_label: `${scrollPercent}%`,
                post_title: postTitle,
                post_category: postCategory
              });
            }
          }
        }
      }
      
      // Throttled scroll tracking
      let scrollTimeout;
      window.addEventListener('scroll', () => {
        if (scrollTimeout) clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(trackReadingProgress, 100);
      });

      // Track social sharing interactions
      document.addEventListener('click', (e) => {
        const target = e.target.closest('[data-track]');
        if (target) {
          const action = target.dataset.track;
          if (typeof gtag !== 'undefined') {
            gtag('event', 'social_share', {
              action: action,
              event_category: 'engagement',
              post_title: postTitle,
              post_category: postCategory
            });
          }
        }
      });

      // Track time spent on page
      const startTime = Date.now();
      let isActive = true;
      
      document.addEventListener('visibilitychange', () => {
        isActive = !document.hidden;
      });
      
      window.addEventListener('beforeunload', () => {
        if (isActive) {
          const timeSpent = Math.round((Date.now() - startTime) / 1000);
          if (typeof gtag !== 'undefined') {
            gtag('event', 'time_on_page', {
              value: timeSpent,
              event_category: 'engagement',
              post_title: postTitle
            });
          }
        }
      });

      // Intersection Observer for related posts
      const relatedPosts = document.querySelectorAll('.related-post');
      if (relatedPosts.length > 0) {
        const relatedObserver = new IntersectionObserver((entries) => {
          entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
              setTimeout(() => {
                entry.target.classList.add('animate-in');
              }, index * PERFORMANCE_CONFIG.ANIMATION_DELAY);
              relatedObserver.unobserve(entry.target);
            }
          });
        }, {
          threshold: PERFORMANCE_CONFIG.INTERSECTION_THRESHOLD,
          rootMargin: PERFORMANCE_CONFIG.LAZY_LOAD_MARGIN
        });

        relatedPosts.forEach(post => {
          relatedObserver.observe(post);
        });
      }

      // Cleanup observers on page unload
      window.addEventListener('beforeunload', () => {
        if (fcpObserver) fcpObserver.disconnect();
        if (lcpObserver) lcpObserver.disconnect();
        if (clsObserver) clsObserver.disconnect();
      });
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initBlogPostPerformanceTracking);
    } else {
      initBlogPostPerformanceTracking();
    }
  </script>
