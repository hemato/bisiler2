    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Sık Sorulan Sorular</h2>
          <p class="text-xl text-gray-600">Merak ettiğiniz soruların cevapları</p>
        </div>
        
        <div class="max-w-4xl mx-auto">
          <div class="space-y-6">
            {faqData.map((item, index) => (
              <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <button
                  class="w-full px-6 py-4 text-left flex items-center justify-between hover:bg-gray-50 transition-colors"
                  onclick={`toggleFAQ(${index})`}
                >
                  <span class="font-semibold text-gray-900">{item.question}</span>
                  <svg class="w-5 h-5 text-gray-400 transform transition-transform" id={`faq-icon-${index}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div class="px-6 pb-4 hidden" id={`faq-content-${index}`}>
