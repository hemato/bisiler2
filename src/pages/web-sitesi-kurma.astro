---

<LandingLayout
  title={seoData.title}
  description={seoData.description}
  pageType="website"
  canonical="https://techcorp.com/web-sitesi-kurma"
>
  <SEOHead
    title={seoData.title}
    description={seoData.description}
    keywords="web sitesi kurma, web tasarım, kurumsal web sitesi, web sitesi kurma fiyatları"
    canonical="https://techcorp.com/web-sitesi-kurma"
    ogType="service"
    locale="tr_TR"
    alternateLocales={[
      { href: 'https://techcorp.com/web-sitesi-kurma', hreflang: 'tr' },
      { href: 'https://techcorp.com/en/website-setup', hreflang: 'en' }
    ]}
  />
  
  <StructuredData
    type="website"
    pageData={seoData}
    locale="tr"
  />

  <!-- Hero Section -->
  <section id="hero" class="bg-gradient-to-r from-primary-600 to-purple-600 text-white py-20 relative overflow-hidden">
      <div class="absolute inset-0 bg-black/20"></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="text-center lg:text-left">
            <!-- Urgency Message -->
            <div class="bg-red-500/20 border border-red-400 rounded-lg p-3 mb-6 inline-block">
              <div class="flex items-center text-red-100">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-sm font-medium">{heroData.urgency}</span>
              </div>
            </div>
            
            <h1 class="text-5xl font-bold mb-6 leading-tight">
              {heroData.headline}
            </h1>
            <p class="text-xl mb-8 opacity-90">
              {heroData.subheadline}
            </p>
            
            <!-- Hero Stats -->
            <div class="grid grid-cols-3 gap-6 mb-8">
              {heroData.stats.map((stat) => (
                <div class="text-center bg-white/10 rounded-lg p-4">
                  <div class="text-2xl font-bold">{stat.number}</div>
                  <div class="text-sm opacity-80">{stat.label}</div>
                </div>
              ))}
            </div>
            
            <!-- Hero CTAs -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
              <button
                id="hero-primary-cta"
                class="bg-white text-primary-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors transform hover:scale-105 shadow-lg"
                onclick="document.getElementById('contact-form').scrollIntoView({ behavior: 'smooth' })"
              >
                {heroData.cta_primary}
              </button>
              <button
                id="hero-secondary-cta"
                class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-primary-600 transition-colors"
                onclick="document.getElementById('portfolio').scrollIntoView({ behavior: 'smooth' })"
              >
                {heroData.cta_secondary}
              </button>
            </div>
          </div>
          
          <!-- Hero Image -->
          <div class="hidden lg:block">
            <div class="relative">
              <img
                src="/images/website-hero-mockup.png"
                alt="Web Sitesi Mockup"
                class="w-full h-auto rounded-lg shadow-2xl"
              />
              <div class="absolute -top-4 -right-4 bg-green-500 text-white px-4 py-2 rounded-full text-sm font-medium animate-bounce">
                Online!
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Social Proof Stats -->
    <section class="py-12 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-2">Güvenilir Web Sitesi Uzmanı</h2>
          <p class="text-gray-600">Başarılı projelerimizle kanıtlanmış deneyim</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {socialProof.stats.map((stat, index) => (
            <div class="text-center bg-white rounded-lg p-6 shadow-sm">
              <div class="text-4xl font-bold text-primary-600 mb-2">{stat.number}</div>
              <div class="text-gray-600">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Problem-Solution Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-8">Web Sitesi Sorununuz Mu Var?</h2>
          
          <!-- Problem -->
          <div class="bg-red-50 border border-red-200 rounded-lg p-8 mb-8">
            <div class="flex items-center justify-center mb-4">
              <svg class="w-16 h-16 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="text-lg text-red-800 font-medium">
              {problemSolutionData.problem}
            </p>
          </div>
          
          <!-- Solution -->
          <div class="bg-green-50 border border-green-200 rounded-lg p-8">
            <div class="flex items-center justify-center mb-4">
              <svg class="w-16 h-16 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="text-lg text-green-800 font-medium">
              {problemSolutionData.solution}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Web Sitesi Paketimizde Neler Var?</h2>
          <p class="text-xl text-gray-600">Profesyonel web sitesi için gereken tüm özellikler</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuresData.map((feature, index) => (
            <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-6">
              <div class="text-4xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3">{feature.title}</h3>
              <p class="text-gray-600 mb-4">{feature.description}</p>
              <div class="bg-blue-50 border border-blue-200 rounded-lg p-3">
                <p class="text-sm text-blue-800 font-medium">{feature.benefit}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section id="process" class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Kanıtlanmış Sürecimiz</h2>
          <p class="text-xl text-gray-600">5 adımda profesyonel web sitenize sahip olun</p>
        </div>
        
        <div class="relative">
          <!-- Process Timeline -->
          <div class="hidden lg:block absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-primary-200"></div>
          
          <div class="space-y-12">
            {processSteps.map((step, index) => (
              <div class={`flex items-center ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'}`}>
                <div class="flex-1 lg:px-8">
                  <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200">
                    <div class="flex items-center mb-4">
                      <div class="w-10 h-10 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-lg mr-4">
                        {step.number}
                      </div>
                      <h3 class="text-xl font-bold text-gray-900">{step.title}</h3>
                    </div>
                    <p class="text-gray-600">{step.description}</p>
                  </div>
                </div>
                
                <div class="hidden lg:block w-8 h-8 bg-primary-600 rounded-full border-4 border-white shadow-lg"></div>
                
                <div class="flex-1 lg:px-8 hidden lg:block"></div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing Section -->
    <section id="packages" class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Web Sitesi Paketleri</h2>
          <p class="text-xl text-gray-600">İhtiyacınıza uygun paketi seçin</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {pricingPackages.map((pkg, index) => (
            <div class={`bg-white rounded-2xl shadow-lg p-8 relative ${pkg.popular ? 'ring-2 ring-primary-500 transform scale-105' : ''}`}>
              {pkg.popular && (
                <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-primary-500 text-white px-4 py-2 rounded-full text-sm font-medium">
                  En Popüler
                </div>
              )}
              
              <div class="text-center mb-6">
                <h3 class="text-2xl font-bold text-gray-900 mb-2">{pkg.name}</h3>
                <div class="text-3xl font-bold text-primary-600 mb-2">{pkg.price}</div>
                <p class="text-gray-600 mb-4">{pkg.duration}</p>
                <p class="text-sm text-gray-500">{pkg.ideal_for}</p>
              </div>
              
              <ul class="space-y-3 mb-8">
                {pkg.features.map((feature) => (
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-gray-700">{feature}</span>
                  </li>
                ))}
              </ul>
              
              <button
                class="w-full bg-primary-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
                onclick="document.getElementById('contact-form').scrollIntoView({ behavior: 'smooth' })"
              >
                Hemen Teklif Al
              </button>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section id="testimonials" class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Müşterilerimiz Ne Diyor?</h2>
          <p class="text-xl text-gray-600">Başarılı projelerimizden örnekler</p>
        </div>
        
        <div class="max-w-4xl mx-auto">
          {testimonials.map((testimonial) => (
            <div class="bg-gray-50 rounded-lg p-8 text-center">
              <div class="mb-6">
                <svg class="w-12 h-12 text-primary-600 mx-auto mb-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M11.2 6.94c-2.1-.09-4.14.58-5.87 1.95C3.73 10.25 2.81 12.5 2.81 15c0 1.17.35 2.29.98 3.27l.08.13c-.19-.4-.25-.79-.25-1.23 0-1.5.75-2.79 1.94-3.57.83-.55 1.8-.81 2.8-.81 1.5 0 2.89.56 3.95 1.61C13.4 15.46 14 16.97 14 18.5c0 1.53-.6 3.04-1.69 4.1C11.22 23.66 9.71 24.26 8.18 24.26c-1.53 0-3.04-.6-4.1-1.66C2.94 21.54 2.34 20.03 2.34 18.5c0-3.94 1.83-7.33 4.99-9.57 1.99-1.41 4.39-2.04 6.78-1.95l.09.02v-.06z"/>
                  <path d="M22.31 6.94c-2.1-.09-4.14.58-5.87 1.95-1.6 1.36-2.52 3.61-2.52 6.11 0 1.17.35 2.29.98 3.27l.08.13c-.19-.4-.25-.79-.25-1.23 0-1.5.75-2.79 1.94-3.57.83-.55 1.8-.81 2.8-.81 1.5 0 2.89.56 3.95 1.61 1.09 1.06 1.69 2.57 1.69 4.1 0 1.53-.6 3.04-1.69 4.1-1.09 1.06-2.6 1.66-4.13 1.66-1.53 0-3.04-.6-4.1-1.66-1.09-1.06-1.69-2.57-1.69-4.1 0-3.94 1.83-7.33 4.99-9.57 1.99-1.41 4.39-2.04 6.78-1.95l.09.02v-.06z"/>
                </svg>
              </div>
              <blockquote class="text-lg text-gray-700 italic mb-6">
                "{testimonial.content}"
              </blockquote>
              <div class="flex items-center justify-center">
                <img
                  src={testimonial.image}
                  alt={testimonial.name}
                  class="w-12 h-12 rounded-full mr-4"
                />
                <div>
                  <div class="font-semibold text-gray-900">{testimonial.name}</div>
                  <div class="text-sm text-gray-600">{testimonial.company}</div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

