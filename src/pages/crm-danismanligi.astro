---

<LandingLayout
  title={seoData.title}
  description={seoData.description}
  pageType="crm"
  canonical="https://techcorp.com/crm-danismanligi"
>
  <SEOHead
    title={seoData.title}
    description={seoData.description}
    keywords="crm danışmanlığı, zoho crm, müşteri yönetimi, crm sistemi kurulum, bitrix24"
    canonical="https://techcorp.com/crm-danismanligi"
    ogType="service"
    locale="tr_TR"
    alternateLocales={[
      { href: 'https://techcorp.com/crm-danismanligi', hreflang: 'tr' },
      { href: 'https://techcorp.com/en/crm-consulting', hreflang: 'en' }
    ]}
  />
  
  <StructuredData
    type="crm"
    pageData={seoData}
    locale="tr"
  />

  <!-- Hero Section -->
  <section id="hero" class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white py-20 relative overflow-hidden">
      <div class="absolute inset-0 bg-black/20"></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="text-center lg:text-left">
            <!-- Urgency Message -->
