  <script>
    // FAQ toggle function
    function toggleFAQ(index) {
      const content = document.getElementById(`faq-content-${index}`);
      const icon = document.getElementById(`faq-icon-${index}`);
      
      if (content.classList.contains('hidden')) {
        content.classList.remove('hidden');
        icon.style.transform = 'rotate(180deg)';
      } else {
        content.classList.add('hidden');
        icon.style.transform = 'rotate(0deg)';
      }
    }
    
    // Make function global
    window.toggleFAQ = toggleFAQ;
    
    // Form submission tracking
    document.querySelector('form').addEventListener('submit', function(e) {
      // Track form submission
      if (window.gtag) {
        gtag('event', 'form_submit', {
          event_category: 'crm_form',
          event_label: 'contact_form',
          value: 1
        });
      }
    });

    // ROI Calculator functionality
    const inputs = document.querySelectorAll('input[type="number"]');
    inputs.forEach(input => {
      input.addEventListener('input', calculateROI);
    });

    function calculateROI() {
      // Simple ROI calculation logic
      const monthlySales = parseFloat(inputs[0].value) || 0;
      const avgCustomerValue = parseFloat(inputs[1].value) || 0;
      const lostCustomers = parseFloat(inputs[2].value) || 0;
      const teamSize = parseFloat(inputs[3].value) || 0;
      
      if (monthlySales > 0) {
        const estimatedGain = Math.round((monthlySales * 0.3) + (avgCustomerValue * lostCustomers * 0.4));
        document.querySelector('.text-yellow-300').textContent = `₺${estimatedGain.toLocaleString()}`;
      }
    }
