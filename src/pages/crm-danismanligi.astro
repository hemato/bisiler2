<!-- ROI Calculator -->
<section class="py-20 bg-primary-600 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        🧮 CRM Yatırımınızın Geri Dönüşünü Hesaplayın
      </h2>
      <p class="text-xl text-gray-200">
        Referans projelerimiz bazında potansiyel kazancınızı görün
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Input Side -->
      <div class="bg-white/10 backdrop-blur rounded-2xl p-8">
        <h3 class="text-2xl font-bold mb-6">Mevcut Durumunuz</h3>
        <div class="space-y-4">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium mb-2">Aylık satış rakamınız</label>
              <input type="text" class="w-full px-4 py-2 bg-white/20 rounded-lg border border-white/30 text-white placeholder-gray-300" placeholder="100.000 TL">
