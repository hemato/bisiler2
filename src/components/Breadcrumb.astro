---
import { ChevronRight, Home } from 'lucide-react';

interface Props {
  items: Array<{name: string, url: string}>;
  className?: string;
}

const { items, className = '' } = Astro.props;
---

<nav class={`breadcrumb ${className}`} aria-label="Breadcrumb">
  <ol class="flex items-center space-x-2 text-sm">
    {items.map((item, index) => (
      <li key={index} class="flex items-center">
        {index > 0 && (
          <ChevronRight className="w-4 h-4 text-secondary-400 mx-2" />
        )}
        {index === items.length - 1 ? (
          <span class="text-secondary-600 font-medium" aria-current="page">
            {index === 0 ? (
              <Home className="w-4 h-4 inline mr-1" />
            ) : null}
            {item.name}
          </span>
        ) : (
          <a
            href={item.url}
            class="text-secondary-500 hover:text-primary-600 transition-colors duration-200 flex items-center"
          >
            {index === 0 ? (
              <Home className="w-4 h-4 inline mr-1" />
            ) : null}
            {item.name}
          </a>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumb {
    /* Additional breadcrumb styles can be added here */
  }
</style>
