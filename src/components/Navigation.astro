---
import { getLangFromUrl } from '../i18n/utils';
import LanguageToggle from './LanguageToggle';
import { COMPANY_INFO } from '../config/company';

const lang = getLangFromUrl(Astro.url);
const currentPath = Astro.url.pathname;

// Import translations dynamically
const translations = lang === 'en' 
  ? await import('../i18n/en.json')
  : await import('../i18n/tr.json');

const t = translations.default;

const { isLandingPage = false } = Astro.props;

// Landing page navigation
const landingNavigation = {
  'crm-danismanligi': [
    { name: 'Çözüm', href: '#solution' },
    { name: 'Başarı Hikayeleri', href: '#success-stories' },
    { name: 'Paketler', href: '#packages' },
    { name: 'SSS', href: '#faq' },
    { name: 'Teklif Al', href: '#form' }
  ],
  'crm-danismanligi-v2': [
    { name: 'Çözüm', href: '#solution' },
    { name: 'Özellikler', href: '#features' },
    { name: 'Süreç', href: '#process' },
    { name: 'Paketler', href: '#packages' },
    { name: 'Referanslar', href: '#testimonials' },
    { name: 'Teklif Al', href: '#form' }
  ],
  'crm-consulting': [
    { name: 'Solution', href: '#solution' },
    { name: 'Success Stories', href: '#success-stories' },
    { name: 'Packages', href: '#packages' },
    { name: 'FAQ', href: '#faq' },
    { name: 'Get Quote', href: '#form' }
  ],
  'crm-consulting-v2': [
    { name: 'Solution', href: '#solution' },
    { name: 'Features', href: '#features' },
    { name: 'Process', href: '#process' },
    { name: 'Packages', href: '#packages' },
    { name: 'Testimonials', href: '#testimonials' },
    { name: 'Get Quote', href: '#form' }
  ],
  'web-sitesi-kurulumu': [
    { name: 'Çözüm', href: '#solution' },
    { name: 'Örnekler', href: '#portfolio' },
    { name: 'Paketler', href: '#packages' },
    { name: 'SSS', href: '#faq' },
    { name: 'Teklif Al', href: '#form' }
  ],
  'web-sitesi-kurulumu-v2': [
    { name: 'Çözüm', href: '#solution' },
    { name: 'Özellikler', href: '#features' },
    { name: 'Örnekler', href: '#portfolio' },
    { name: 'Süreç', href: '#process' },
    { name: 'Paketler', href: '#packages' },
    { name: 'Referanslar', href: '#testimonials' },
    { name: 'Teklif Al', href: '#form' }
  ],
  'website-setup': [
    { name: 'Solution', href: '#solution' },
    { name: 'Portfolio', href: '#portfolio' },
    { name: 'Packages', href: '#packages' },
    { name: 'FAQ', href: '#faq' },
    { name: 'Get Quote', href: '#form' }
  ],
  'website-setup-v2': [
    { name: 'Solution', href: '#solution' },
    { name: 'Features', href: '#features' },
    { name: 'Portfolio', href: '#portfolio' },
    { name: 'Process', href: '#process' },
    { name: 'Packages', href: '#packages' },
    { name: 'Testimonials', href: '#testimonials' },
    { name: 'Get Quote', href: '#form' }
  ]
};

// Regular navigation
const navigation = [
  { name: t.nav.home, href: lang === 'en' ? '/en' : '/' },
  { name: t.nav.about, href: lang === 'en' ? '/en/about' : '/hakkimizda' },
  { name: t.nav.services, href: lang === 'en' ? '/en/services' : '/hizmetlerimiz' },
  { name: t.nav.references, href: lang === 'en' ? '/en/references' : '/referanslar' },
  { name: t.nav.faq, href: lang === 'en' ? '/en/faq' : '/sss' },
  { name: t.nav.blog, href: lang === 'en' ? '/en/blog' : '/blog' },
  { name: t.nav.contact, href: lang === 'en' ? '/en/contact' : '/iletisim' }
];

// Determine navigation based on current path
const currentPage = currentPath.split('/').pop() || '';
const navItems = isLandingPage && landingNavigation[currentPage] 
  ? landingNavigation[currentPage] 
  : navigation;

// Logo link - for landing pages, link to current page, otherwise to home
const logoHref = isLandingPage ? currentPath : (lang === 'en' ? '/en' : '/');
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href={logoHref} class="text-2xl font-bold text-primary-600">
          {COMPANY_INFO.name}
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          {navItems.map((item) => (
            <a
              href={item.href}
              class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
                currentPath === item.href || (item.href.startsWith('#') && currentPath.includes(item.href.slice(1)))
                  ? 'text-primary-600 bg-primary-50'
                  : 'text-secondary-600 hover:text-primary-600 hover:bg-secondary-50'
              }`}
            >
              {item.name}
            </a>
          ))}
        </div>
      </div>

      <!-- Language Toggle -->
      <div class="flex items-center">
        <LanguageToggle currentLang={lang} pathname={currentPath} client:load />
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-secondary-600 hover:text-primary-600 hover:bg-secondary-50 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="mobile-menu hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`block px-3 py-2 rounded-md text-base font-medium transition-colors ${
              currentPath === item.href || (item.href.startsWith('#') && currentPath.includes(item.href.slice(1)))
                ? 'text-primary-600 bg-primary-50'
                : 'text-secondary-600 hover:text-primary-600 hover:bg-secondary-50'
            }`}
          >
            {item.name}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
