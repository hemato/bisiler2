---
// Optimized image component using Astro 5's built-in image optimization
import { Image } from 'astro:assets';

export interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  quality?: number;
  format?: 'webp' | 'avif' | 'png' | 'jpg';
  sizes?: string;
  densities?: number[];
}

const {
  src,
  alt,
  width,
  height,
  class: className = '',
  loading = 'lazy',
  quality = 80,
  format = 'webp',
  sizes,
  densities = [1, 2]
} = Astro.props;

// Generate responsive images for different screen sizes
const responsiveSizes = sizes || `
  (max-width: 640px) ${Math.round(width * 0.5)}px,
  (max-width: 1024px) ${Math.round(width * 0.75)}px,
  ${width}px
`;
---

{src.startsWith('http') ? (
  <!-- External image - use regular img with optimization attributes -->
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    class={className}
    loading={loading}
    decoding="async"
    sizes={responsiveSizes}
  />
) : (
  <!-- Local image - use Astro's built-in optimization -->
  <Image
    src={src}
    alt={alt}
    width={width}
    height={height}
    class={className}
    loading={loading}
    quality={quality}
    format={format}
    densities={densities}
    sizes={responsiveSizes}
  />
)}

<style>
  img {
    max-width: 100%;
    height: auto;
  }
</style>
