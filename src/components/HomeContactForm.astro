<!-- Enhanced Analytics and Performance Tracking -->
<script>
  // Enhanced form analytics
  document.addEventListener('DOMContentLoaded', function() {
    // Track section visibility
    const section = document.querySelector('[data-section="home-contact-form"]');
    if (section && 'IntersectionObserver' in window) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Track section view
            if (typeof window.gtag !== 'undefined') {
              window.gtag('event', 'section_view', {
                'event_category': 'engagement',
                'event_label': 'home_contact_form',
                'page_language': document.documentElement.lang || 'tr'
              });
            }
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.5 });
      
      observer.observe(section);
    }

    // Track form field interactions for better UX insights
    const formInputs = document.querySelectorAll<HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement>('input, textarea, select');
    formInputs.forEach(input => {
      let focusTime: number = 0;
      
      input.addEventListener('focus', () => {
        focusTime = Date.now();
        if (typeof window.gtag !== 'undefined') {
          window.gtag('event', 'form_field_focus', {
            'event_category': 'form_interaction',
            'event_label': input.name || input.tagName.toLowerCase(),
            'page_language': document.documentElement.lang || 'tr'
          });
        }
      });
      
      input.addEventListener('blur', () => {
        if (focusTime > 0) {
          const timeSpent = Date.now() - focusTime;
          if (timeSpent > 1000 && typeof window.gtag !== 'undefined') { // Only track if spent more than 1 second
            window.gtag('event', 'form_field_time', {
              'event_category': 'form_interaction',
              'event_label': input.name || input.tagName.toLowerCase(),
              'value': Math.round(timeSpent / 1000),
              'page_language': document.documentElement.lang || 'tr'
            });
          }
        }
      });
    });

    // Track scroll depth for better content optimization
    let maxScroll: number = 0;
    const trackScrollDepth = (): void => {
      const scrollPercent = Math.round((window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100);
      if (scrollPercent > maxScroll && scrollPercent % 25 === 0) {
        maxScroll = scrollPercent;
        if (typeof window.gtag !== 'undefined') {
          window.gtag('event', 'scroll_depth', {
            'event_category': 'engagement',
            'event_label': `${scrollPercent}%`,
            'value': scrollPercent
          });
        }
      }
    };
    
    let scrollTimeout: ReturnType<typeof setTimeout> | undefined;
    window.addEventListener('scroll', () => {
      if (scrollTimeout) {
        clearTimeout(scrollTimeout);
      }
      scrollTimeout = setTimeout(trackScrollDepth, 100);
    });
  });
</script>

<!-- Performance and Security optimizations -->
