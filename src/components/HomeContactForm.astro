---
import { getLangFromUrl } from '../i18n/utils';
import ContactForm from './ContactForm';

const lang = getLangFromUrl(Astro.url);

// Enhanced i18n import with proper type support
const translations = lang === 'en' 
  ? await import('../i18n/en.json')
  : await import('../i18n/tr.json');

const t = translations.default;

// Extract form-specific translations from the new i18n structure
const formTranslations = {
  forms: {
    contact: t.forms?.contact || {},
    common: t.forms?.common || {},
    validation: t.forms?.validation || {},
    security: t.forms?.security || {},
    analytics: t.forms?.analytics || {}
  }
};

// Legacy translation structure for backward compatibility
const legacyTranslations = {
  contact: {
    form: {
      name: t.forms?.contact?.labels?.name || (lang === 'en' ? 'Full Name' : 'Ad Soyad'),
      email: t.forms?.contact?.labels?.email || (lang === 'en' ? 'Email' : 'E-posta'),
      phone: t.forms?.contact?.labels?.phone || (lang === 'en' ? 'Phone Number' : 'Telefon Numarası'),
      company: t.forms?.contact?.labels?.company || (lang === 'en' ? 'Company Name' : 'Şirket Adı'),
      services: t.forms?.contact?.labels?.services || (lang === 'en' ? 'Services of Interest' : 'İlgilendiğiniz Hizmetler'),
      message: t.forms?.contact?.labels?.message || (lang === 'en' ? 'Your Message' : 'Mesajınız'),
      submit: t.forms?.contact?.submit || (lang === 'en' ? 'Send Message' : 'Mesaj Gönder'),
      serviceOptions: t.forms?.contact?.serviceOptions || [
        lang === 'en' ? 'Website Setup' : 'Web Sitesi Kurulumu',
        lang === 'en' ? 'Form and CRM Integration' : 'Form ve CRM Entegrasyonu',
        lang === 'en' ? 'CRM Selection & Setup' : 'CRM Seçimi ve Kurulumu',
        lang === 'en' ? 'Automation Systems' : 'Otomasyon Sistemleri',
        lang === 'en' ? 'SEO & Technical Optimization' : 'SEO ve Teknik İyileştirme',
        lang === 'en' ? 'Technical Consulting' : 'Teknik Danışmanlık',
        lang === 'en' ? 'Other' : 'Diğer'
      ]
    }
  }
};

// Determine which title and description to use
const sectionTitle = t.forms?.homeContact?.title || 
  (lang === 'en' ? 'Get Started Today' : 'Bugün Başlayın');

const sectionDescription = t.forms?.homeContact?.description || 
  (lang === 'en' 
    ? 'Fill out the form below and let\'s discuss your project needs'
    : 'Aşağıdaki formu doldurun ve proje ihtiyaçlarınızı konuşalım'
  );
