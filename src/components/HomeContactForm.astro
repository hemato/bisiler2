---
import { getLangFromUrl } from '../i18n/utils';
import ContactFormComponent from './ContactFormComponent';

const lang = getLangFromUrl(Astro.url);

const translations = lang === 'en' 
  ? await import('../i18n/en.json')
  : await import('../i18n/tr.json');

const t = translations.default;
---

<section class="py-20 bg-secondary-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-secondary-900 mb-4">
        {lang === 'en' ? 'Get Started Today' : 'Bugün Başlayın'}
      </h2>
      <p class="text-xl text-secondary-600">
        {lang === 'en' 
          ? 'Fill out the form below and let\'s discuss your project needs'
          : 'Aşağıdaki formu doldurun ve proje ihtiyaçlarınızı konuşalım'
        }
      </p>
    </div>

    <div class="bg-white rounded-2xl shadow-xl p-8">
      <ContactFormComponent translations={t} client:load />
    </div>
  </div>
</section>